<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui08Colections.Views.DetailPage"
             Title="DetailPage">
    <VerticalStackLayout>
        <Label Text="Name" />
        <Entry Text="{Binding Selected.Name}" />
        <Label Text="Amount" />
        <Entry Text="{Binding Selected.Amount}" />
        <Label Text="I have it" />
        <Switch IsToggled="{Binding Selected.Obtained}" />
        <Button Text="Save" x:Name="btnSave" Clicked="btnBack_Clicked" Command="{Binding UpdateCommand}" CommandParameter="{Binding Selected}"/>
        <Button Text="Back" x:Name="btnBack" Clicked="btnBack_Clicked"/>
    </VerticalStackLayout>
</ContentPage>