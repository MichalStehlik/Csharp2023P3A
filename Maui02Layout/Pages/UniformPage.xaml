<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui02Layout.Pages.UniformPage"
             Title="UniformPage">
    <ScrollView>
        <FlexLayout AlignContent="Center" JustifyContent="Center">
            <Frame 
                BackgroundColor="Bisque" 
                WidthRequest="300"
                HeightRequest="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="70" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Text="Výška" VerticalOptions="Center"/>
                    <Label Text="Šířka" Grid.Row="1" VerticalOptions="Center"/>
                    <Entry Grid.Row="0" Grid.Column="1" VerticalOptions="Center"/>
                    <Entry Grid.Row="1" Grid.Column="1" VerticalOptions="Center"/>
                    <Button Text="Počítej" Grid.Row="2" Grid.ColumnSpan="2"/>
                </Grid>
            </Frame>
        </FlexLayout>
    </ScrollView>
</ContentPage>