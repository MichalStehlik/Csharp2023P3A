<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Button" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="HotPink" />
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BorderColor" Value="Yellow" />
        <Setter Property="BorderWidth" Value="10" />
        <Setter Property="Padding" Value="15" />
    </Style>
    <Style TargetType="Button" x:Key="successButton">
        <Setter Property="BackgroundColor" Value="ForestGreen"/>
        <Setter Property="FontFamily" Value="Comic Sans MS" />
    </Style>
    <Style TargetType="Button" x:Key="dangerButton" BasedOn="{StaticResource successButton}">
        <Setter Property="BackgroundColor" Value="PaleVioletRed"/>
    </Style>
</ResourceDictionary>